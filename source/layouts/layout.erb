<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%=current_page.data.title.nil? ? "City of Broad Shoulders" : current_page.data.title + " - City of Broad Shoulders" %></title>
    
    <%= stylesheet_link_tag "normalize", "main" %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script type="text/javascript" src="//use.typekit.net/gop8mxt.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  
  <body class="<%= page_classes %>">

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=302570366556284";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <div class="main-nav" id="main-nav">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="speak-easy.html"><%= image_tag 'small-card-badge.png' %> Speak Easy Night</a></li>
      <li><a href="maker.html"><%= image_tag 'small-wrench-badge.png' %> Maker Night</a></li>
      <li><a href="windy-city.html"><%= image_tag 'small-mic-badge.png' %> Windy City Night</a></li>
      <li><a href="sponsors.html">Sponsors</a></li>
      <li><a href="#">Close</a></li>
    </ul>
  </div>

  <div class="page-wrap">
    <%= yield %>

    <div class="row row-padding-medium footer clearfix">
      <div class="container">
        <div class="one-third column">
          <h3>Stay Connected</h3>
          <ul class="share">
            <li><a href="https://www.facebook.com/ChicagoBroadShoulders"><img src="images/facebook-share-icon.png"></a></li>
            <li><a href="https://twitter.com/COBS_2014"><img src="images/twitter-share-icon.png"></a></li>
            <!-- <li><a href="#"><img src="images/linkedin&#45;share&#45;icon.png"></a></li> -->
            <!-- <li><a href="#"><img src="images/google&#45;share&#45;icon.png"></a></li> -->
          </ul>
        </div>
        <div class="one-third column center">
          <%= image_tag 'logo-small.png' %>
        </div>
        <div class="one-third column text-right">
          <h3>Contact</h3>
          <p>mark@tablexi.com</p>
          <p>&copy;	2014 City Of Broad Shoulders</p>
          <p><a target="_blank" href="attribution.html">Attribution</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <%= javascript_include_tag  "all" %>
  </body>
</html>
