<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "normalize", "main" %>
    <%= javascript_include_tag  "all" %>
    <script type="text/javascript" src="//use.typekit.net/gop8mxt.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>

    <div class="row row-padding-medium footer clearfix">
      <div class="container">
        <div class="one-third column">
          <h3>Stay Connected</h3>
          <ul class="share">
            <li><a href="#"><img src="images/facebook-share-icon.png"></a></li>
            <li><a href="#"><img src="images/twitter-share-icon.png"></a></li>
            <li><a href="#"><img src="images/linkedin-share-icon.png"></a></li>
            <li><a href="#"><img src="images/google-share-icon.png"></a></li>
          </ul>
        </div>
        <div class="one-third column center">
          <%= image_tag 'logo-small.png' %>
        </div>
        <div class="one-third column text-right">
          <h3>Contact</h3>
          <p>email@address.com</p>
          <p>&copy;	2014 City Of Broad Shoulders</p>
        </div>
      </div>
    </div>

  </body>
</html>
